{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "awk *": "allow",
      "cat *": "allow",
      "echo *": "allow",
      "find *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "ls *": "allow",
      "sed *": "allow",
      "sort *": "allow",
      "tail *": "allow",
      "tc *": "allow",
      "tree *": "allow",
      "uniq *": "allow",
      "wc *": "allow",
      "git branch *": "allow",
      "git describe *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git merge-base *": "allow",
      "git show *": "allow",
      "git status *": "allow",
      "git tag -l *": "allow",
      "mvn test *": "allow",
      "mvn compile *": "allow",
      "mvn clean *": "allow",
      "make lint *": "allow",
      "make test *": "allow"
    },
    "webfetch": "ask",
    "doom_loop": "ask",
    "external_directory": "ask"
  },
  "plugin": ["@mohak34/opencode-notifier@latest"]
}
