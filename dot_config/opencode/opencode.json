{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "grep *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "cat *": "allow",
      "echo *": "allow",
      "git diff *": "allow",
      "git status *": "allow",
      "git show *": "allow",
      "git log *": "allow",
      "mvn test *": "allow",
      "mvn compile *": "allow",
      "mvn clean *": "allow",
      "make lint *": "allow",
      "make test *": "allow",

      "rm *": "deny",
      "git commit*": "deny",
      "git stash*": "deny",
      "git checkout*": "deny",
      "git reset*": "deny"
    },
    "webfetch": "ask",
    "doom_loop": "ask",
    "external_directory": "ask"
  },
  "plugin": ["@mohak34/opencode-notifier@latest"]
}
